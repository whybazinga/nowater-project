<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLight"
    tools:context=".GameActivity">

    <TextView
        android:id="@+id/Game_PlayerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:textColor="@color/colorSecondaryBrown"
        android:textSize="18sp"
        android:textStyle="bold"
        app:fontFamily="serif-monospace"
        app:layout_constraintBaseline_toBaselineOf="@+id/Game_PagesView"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/Game_FinishButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/button"
        android:text="@string/game__button_text_finish"
        android:textColor="@color/colorSecondaryBrown"
        app:fontFamily="serif-monospace"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:id="@+id/Game_Layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/Game_ShopButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Game_FinishButton">

    </LinearLayout>

    <Button
        android:id="@+id/Game_ShopButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/button"
        android:paddingLeft="32dp"
        android:paddingRight="24dp"
        android:text="@string/game__button_text_shop"
        android:textAllCaps="false"
        android:textColor="@color/colorSecondaryBrown"
        android:textSize="24sp"
        android:visibility="gone"
        app:fontFamily="serif-monospace"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/Game_PagesView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:textColor="@color/colorSecondaryBrown"
        android:textSize="18sp"
        android:textStyle="bold"
        app:fontFamily="serif-monospace"
        app:layout_constraintBaseline_toBaselineOf="@+id/Game_FinishButton"
        app:layout_constraintStart_toEndOf="@+id/Game_PlayerName" />

</android.support.constraint.ConstraintLayout>